<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 基本配置：信任系統證書 -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- 開發環境：允許本地測試 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android Emulator -->
        <domain includeSubdomains="true">192.168.0.10</domain> <!-- 樹莓派 -->
    </domain-config>
    
    <!-- 生產環境：HTTPS only -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api-qaq.ntut.org</domain>
        <domain includeSubdomains="true">ntut.edu.tw</domain>
        <domain includeSubdomains="true">app.ntut.edu.tw</domain>
        <domain includeSubdomains="true">aps.ntut.edu.tw</domain>
    </domain-config>
</network-security-config>
